<div class="col-lg-12">
  <p style="color: green"><%= notice %></p>

  <h1>Users</h1>

  <%= link_to "New user", new_user_path, data: { controller: 'user-modal' }, class: "btn btn-primary mb-3 mt-3" %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="user_list">
      <% @users.each do |user| %>
        <%= render "user", user: user %>
      <% end %>
    </tbody>
  </table>
</div>
